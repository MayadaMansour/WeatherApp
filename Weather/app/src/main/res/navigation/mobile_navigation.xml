<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/dialogeFragment">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.weather.ui.home.ui.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_favorite"
        android:name="com.example.weather.ui.favorite.ui.FavoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_navigation_favorite_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_navigation_favorite_to_detailesFragment"
            app:destination="@id/detailesFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_alert"
        android:name="com.example.weather.ui.alert.AlertFragment"
        android:label="Alert"
        tools:layout="@layout/fragment_alert" />

    <fragment
        android:id="@+id/navigation_setting"
        android:name="com.example.weather.ui.setting.SettingFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/dialogeFragment"
        android:name="com.example.weather.location.DialogeFragment"
        android:label="fragment_dialoge"
        tools:layout="@layout/fragment_dialoge" >
        <action
            android:id="@+id/action_dialogeFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_dialogeFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.weather.location.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/detailesFragment"
        android:name="com.example.weather.ui.favorite.ui.DetailesFragment"
        android:label="fragment_detailes"
        tools:layout="@layout/fragment_detailes" />


</navigation>